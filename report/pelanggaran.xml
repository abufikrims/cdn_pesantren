<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_cdn_pelanggaran_menu" string="Cdn - Pelanggaran"
         model="cdn.pelanggaran" report_type="qweb-pdf" 
         file="cdn.pelanggaran"  name="cdn_pesantren.cdn_pelanggaran_report" />

        <!-- document template -->
        <template id="cdn_pesantren.cdn_pelanggaran_report_document" >
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc.with_context({'lang': lang})"/>
                <div class="page">
                    <h2>
                        Pelanggaran: <span t-field="doc.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2">
                            <strong>Tgl pelanggaran</strong>
                            <p class="m-0" t-field="doc.tgl_pelanggaran" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Diperiksa oleh</strong>
                            <p class="m-0" t-field="doc.diperiksa_oleh" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Poin</strong>
                            <p class="m-0" t-field="doc.poin" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Deskripsi</strong>
                            <p class="m-0" t-field="doc.deskripsi" />
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Tindakan</strong>
                            <p class="m-0" t-field="doc.tindakan_id"/>
                        </div>
                        <div class="col-auto mw-100 mb-2">
                            <strong>Siswa</strong>
                            <p class="m-0" t-field="doc.siswa_id"/>
                        </div>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="cdn_pesantren.cdn_pelanggaran_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="cdn_pesantren.cdn_pelanggaran_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>