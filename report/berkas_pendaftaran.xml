                <div class="oe_structure"/>
            </t>
        </template>

        <!-- main template -->
        <template id="cdn_pesantren.cdn_berkas_pendaftaran_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-set="lang" t-value="doc.create_uid.lang"/>
                    <t t-call="cdn_pesantren.cdn_berkas_pendaftaran_report_document" />
                </t>
            </t>
        </template>

    </data>
</odoo>