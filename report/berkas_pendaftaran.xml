<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- report qweb view -->
        <report id="report_cdn_berkas_pendaftaran_menu" string="Cdn - Berkas pendaftaran"
         model="cdn.berkas_pendaftaran" report_type="qweb-pdf" 
         file="cdn.berkas_pendaftaran"  name="cdn_pesantren.cdn_berkas_pendaftaran_report" />

