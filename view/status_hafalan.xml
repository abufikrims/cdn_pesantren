<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_cdn_status_hafalan_tree" model="ir.ui.view">
            <field name="name">cdn_status_hafalan_tree</field>
            <field name="model">cdn.status_hafalan</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Status hafalan">
                    <field name="name" />
                    <field name="nilai" />
                    <field name="deskripsi" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_cdn_status_hafalan_form" model="ir.ui.view">
            <field name="name">cdn_status_hafalan_form</field>
            <field name="model">cdn.status_hafalan</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Status hafalan">
                    <header>
                        <!--button string="Confirm" type="object" name="action_confirm" states="draft" /-->
                        <!--button string="Mark as Done" type="object" name="action_done" states="confirmed" /-->
                        <!--button string="Reset to Draft" type="object" name="action_draft" states="confirmed,done" /-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Status hafalan Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nilai" />
                                <field name="deskripsi" />
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_cdn_status_hafalan_search" model="ir.ui.view">
            <field name="name">cdn_status_hafalan</field>
            <field name="model">cdn.status_hafalan</field>
            <field name="arch" type="xml">
                <search string="Status hafalan">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nilai" name="filter_by_nilai" domain="[('nilai','=','')]" />
                    <filter string="Deskripsi" name="filter_by_deskripsi" domain="[('deskripsi','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nilai" select="True"/>
                    <field name="deskripsi" select="True"/>
                    <group string="Group By..">
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_cdn_status_hafalan_kanban" model="ir.ui.view" >
            <field name="name">cdn_status_hafalan</field>
            <field name="model">cdn.status_hafalan</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nilai" />
                    <field name="deskripsi" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_cdn_status_hafalan_graph" model="ir.ui.view">
            <field name="name">cdn_status_hafalan</field>
            <field name="model">cdn.status_hafalan</field>
            <field name="arch" type="xml">
                <graph string="Status hafalan" type="bar">
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_cdn_status_hafalan" model="ir.actions.act_window">
            <field name="name">Status hafalan</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.status_hafalan</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Status hafalan
                </p><p>
                Click the Create button to add a new Status hafalan
                </p>
            </field>
        </record>

        <menuitem id="menu_cdn_status_hafalan" name="Status hafalan" parent="cdn_pesantren_sub_konfig" action="action_cdn_status_hafalan" sequence="20"/>
    </data>
</odoo>