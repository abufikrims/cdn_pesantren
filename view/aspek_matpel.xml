<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- tree view -->
        <record id="view_cdn_aspek_matpel_tree" model="ir.ui.view">
            <field name="name">cdn_aspek_matpel_tree</field>
            <field name="model">cdn.aspek_matpel</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Aspek matpel">
                    <field name="name" />
                    <field name="nilai_kkm" />
                    <field name="nilai_max" />
                    <field name="nilai_min" />
                    <field name="matpel_id" />
                </tree>
            </field>
        </record>
        <!-- form view -->
        <record id="view_cdn_aspek_matpel_form" model="ir.ui.view">
            <field name="name">cdn_aspek_matpel_form</field>
            <field name="model">cdn.aspek_matpel</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Aspek matpel">
                    <header>
                        <!--button string="Confirm" type="object" name="action_confirm" states="draft" /-->
                        <!--button string="Mark as Done" type="object" name="action_done" states="confirmed" /-->
                        <!--button string="Reset to Draft" type="object" name="action_draft" states="confirmed,done" /-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!--button type="object" name="action_view_detail" class="oe_stat_button" icon="fa-pencil-square-o"-->
                                <!--field name="detail_count" widget="statinfo" string="Detail(s)"/-->
                                <!--field name="detail_ids" invisible="1"/-->
                            <!--/button-->
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Aspek matpel Name"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nilai_kkm" />
                                <field name="nilai_max" />
                                <field name="nilai_min" />
                            </group>
                            <group>
                                <field name="matpel_id" />
                            </group>
                        </group>
                        <notebook>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- search -->
        <record id="view_cdn_aspek_matpel_search" model="ir.ui.view">
            <field name="name">cdn_aspek_matpel</field>
            <field name="model">cdn.aspek_matpel</field>
            <field name="arch" type="xml">
                <search string="Aspek matpel">

                    <filter string="Name" name="filter_by_name" domain="[('name','=','')]" />
                    <filter string="Nilai kkm" name="filter_by_nilai_kkm" domain="[('nilai_kkm','=','')]" />
                    <filter string="Nilai max" name="filter_by_nilai_max" domain="[('nilai_max','=','')]" />
                    <filter string="Nilai min" name="filter_by_nilai_min" domain="[('nilai_min','=','')]" />
                    <field name="name" select="True"/>
                    <field name="nilai_kkm" select="True"/>
                    <field name="nilai_max" select="True"/>
                    <field name="nilai_min" select="True"/>
                    <field name="matpel_id" select="True"/>
                    <group string="Group By..">
                        <filter string="Matpel" domain="[]" name="group_by_matpel_id" context="{'group_by':'matpel_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- kanban , to show image, please add image_small in the model -->
        <record id="view_cdn_aspek_matpel_kanban" model="ir.ui.view" >
            <field name="name">cdn_aspek_matpel</field>
            <field name="model">cdn.aspek_matpel</field>
            <field name="arch" type="xml">
                <kanban version="7.0">
                    <field name="id" />
                    <field name="name" />
                    <field name="nilai_kkm" />
                    <field name="nilai_max" />
                    <field name="nilai_min" />
                    <field name="matpel_id" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="name"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            Field1: <field name="name"></field>
                                        </li>
                                        <li>
                                            Field2: <field name="name"></field>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- calendar if a date field exists -->
        <!-- graph -->
        <record id="view_cdn_aspek_matpel_graph" model="ir.ui.view">
            <field name="name">cdn_aspek_matpel</field>
            <field name="model">cdn.aspek_matpel</field>
            <field name="arch" type="xml">
                <graph string="Aspek matpel" type="bar">
                    <field name="matpel_id"/>
                </graph>
            </field>
        </record>
        <!-- action window -->
        <record id="action_cdn_aspek_matpel" model="ir.actions.act_window">
            <field name="name">Aspek matpel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.aspek_matpel</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban,tree,form,graph</field>
            <field name="context">{"search_default_fieldname":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                Click to add a new Aspek matpel
                </p><p>
                Click the Create button to add a new Aspek matpel
                </p>
            </field>
        </record>

        <menuitem id="menu_cdn_aspek_matpel" name="Aspek matpel" parent="cdn_pesantren_sub_menu" action="action_cdn_aspek_matpel" sequence="20"/>
    </data>
</odoo>