        <!-- form view -->
        <record id="view_cdn_siswa_form" model="ir.ui.view">
            <field name="name">cdn_siswa_form</field>
            <field name="model">cdn.siswa</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Siswa">
                    <header>
                        <!--button string="Confirm" type="object" name="action_confirm" states="draft" /-->
                        <!--button string="Mark as Done" type="object" name="action_done" states="confirmed" /-->
                        <!--button string="Reset to Draft" type="object" name="action_draft" states="confirmed,done" /-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                             <button type="object" name="open_kesehatan" class="oe_stat_button" icon="fa-heartbeat">
                                <field name="kesehatan_count" widget="statinfo" string="Kesehatan"/>
                                <!-- <field name="detail_ids" invisible="1"/> -->
                            </button>
                            <button type="object" name="open_pelanggaran" class="oe_stat_button" icon="fa-gavel">
                                <field name="pelanggaran_count" widget="statinfo" string="Pelanggaran"/>
                                <!-- <field name="detail_ids" invisible="1"/> -->
                            </button>
                            <button type="object" name="open_keuangan"  class="oe_stat_button" icon="fa-money">
                                <field name="keuangan_count" widget="statinfo" string="Keuangan"/>
                                <!-- <field name="detail_ids" invisible="1"/> -->
                            </button>
                            <button type="object" name="open_perijinan" class="oe_stat_button" icon="fa-pencil-square-o">
                                <field name="perijinan_count" widget="statinfo" string="Perijinan"/>
                                <!-- <field name="detail_ids" invisible="1"/> -->
                            </button>
                            <button type="object" name="open_prestasi" class="oe_stat_button" icon="fa-trophy">
                                <field name="prestasi_count" widget="statinfo" string="Prestasi"/>
                                <!-- <field name="detail_ids" invisible="1"/> -->
                            </button>
                        </div> 
                            <field name="image" widget="image" class="oe_left oe_avatar"/>
                        <!-- <field name="image" widget="image" class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/> -->
                        <div class="oe_title">
                            <!-- <label for="name" class="oe_edit_only" string="Nama Siswa"/> -->
                            <h1><field name="name" placeholder="Nama Lengkap Siswa" style="width:160%" /></h1>
                        </div>
                        <group>
                            <field name="no_induk_siswa"></field>
                        </group>   
                            
                        <group col="4" colspan="4" name="personal_detail">
                            <field name="no_daftar" />
                            <field name="tgl_daftar" />
                            <field name="program_daftar" />
                            <field name="nama_panggilan" />
                            <field name="jns_kel" />
                            <field name="tmp_lahir" />
                            <field name="tgl_lahir" />
                            <field name="nik" />
                            <field name="status_dlm_kel" />
                            <field name="cita_cita" />
                            <field name="hobi" />
                            <field name="bhs_sehari" />
                            <field name="gol_darah" />
                            <field name="tinggi_badan" placeholder="tinggi badan (cm)"/>
                            <field name="berat_badan" placeholder="berat badan (KG)"/>
                            <field name="agama_siswa" />

                            <!-- <field name="kelas_paralel_id" /> -->
                            <field name="berkas_ids" widget="many2many_tags"/>
                        </group>
                        <separator string="Data Untuk Kelas Tahfidz - (Diisi jika mendaftar di kelas Tahfidz)" />
                        <group>
                            <field name="institusi_tahfidz" />
                            <field name="hafalan_sejak_kelas" />
                            <field name="motivasi_menghafal" />
                            <field name="pilihan_tahfidz" />
                            <!-- <field name="foto" /> -->
                        </group>                                

                        <notebook colspan="4">                                
                            <page name="identitas_siswa" string="Domisili Siswa">
                                <group string="Domisili Siswa" name="address">
                                    <field name="propinsi_id" options="{'no_create': True}" />
                                    <field name="kota_id" options="{'no_create': True}" />
                                    <field name="kecamatan_id" options="{'no_create': True}" />
                                    <field name="kelurahan_id" />
                                    <!-- <field name="kota_asal" /> -->
                                    <field name="alamat_siswa" />
                                    <field name="rt_rw" />
                                    <field name="no_telp_rumah" />
                                    <field name="email_siswa" />
                                    <field name="kodepos" />
                                    <field name="tinggal_bersama" />
                                </group>
                            </page>
                            <page string="Identitas Sekolah" name="educational">
                                <separator string="Keterangan Pendidikan Sebelumnya" />
                                <group col="4" colspan="4" name="educational_detail">
                                    <field name="sekolah_asal" />
                                    <field name="nisn" />
                                    <field name="alamat_sekolah_asal" />
                                    <field name="kepsek_sekolah_asal" />
                                    <field name="telp_sekolah_asal" />
                                    <field name="status_sekolah_asal" />
                                    <field name="prestasi_di_sekolah" />
                                </group>
                                <separator string="Nilai Rata-Rata Raport Kelas" />
                                <group>
                                    <field name="raport_4sd_1" />
                                    <field name="raport_4sd_2" />
                                    <field name="raport_5sd_1" />
                                    <field name="raport_5sd_2" />
                                    <field name="raport_6sd_1" />
                                    <field name="baca_quran" />
                                </group>
                            </page>
                            <page string="Riwayat Kesehatan" name="health">
                                <separator string="Penyakit yang pernah diderita" />  
                                <group col="4" colspan="4">
                                    <label for="sakit_tbc_pernah" string="Pernah Sakit TBC"/>
                                    <div name="div_tbc">
                                        <field name="sakit_tbc_pernah" />
                                        <field name="sakit_tbc_ket" placeholder="Kapan sakit TBC" />                                        
                                    </div>
                                    <label for="sakit_asma_pernah" string="Pernah Sakit ASMA"/>
                                    <div name="div_asma">
                                        <field name="sakit_asma_pernah" />
                                        <field name="sakit_asma_ket" placeholder="Kapan sakit Asma" />
                                    </div>
                                    <label for="sakit_hepatitisb_pernah" string="Pernah Sakit Hepatitis"/>
                                    <div name="div_hepatitis">
                                        <field name="sakit_hepatitisb_pernah" />
                                        <field name="sakit_hepatitisb_ket" placeholder="Kapan sakit Hepatitis" />
                                    </div>
                                    <label for="sakit_cacar_pernah" string="Pernah Sakit Cacar"/>
                                    <div name="div_cacar">
                                        <field name="sakit_cacar_pernah" />
                                        <field name="sakit_cacar_ket" placeholder="Kapan sakit Cacar" />
                                    </div>
                                    <label for="sakit_lain_pernah" string="Pernah Sakit Lain"/>
                                    <div>
                                        <field name="sakit_lain_pernah" />
                                        <field name="sakit_lain_ket" placeholder="Kapan sakit lainnya" />
                                    </div>                                   
                                </group>
                            </page>
                            <page string="Identitas Ortu" name="ortu_siswa">
                                <separator string="Identitas Ayah" colspan="4"/>
                                <group col="4" colspan="4" name="ayah">
                                    <field name="ayah_nama" />
                                    <field name="ayah_tmp_lahir" />
                                    <field name="ayah_tgl_lahir" />
                                    <field name="ayah_warganegara" />
                                    <field name="ayah_telp" />
                                    <field name="ayah_email" />
                                    <field name="ayah_pekerjaan_id" />
                                    <field name="ayah_alamat_kantor" />
                                    <field name="ayah_penghasilan" />
                                    <field name="ayah_pendidikan" />
                                </group>
                                <separator string="Identitas Ibu" colspan="4"/>
                                <group col="4" colspan="4" name="ibu">
                                    <field name="ibu_nama" />
                                    <field name="ibu_tmp_lahir" />
                                    <field name="ibu_tgl_lahir" />
                                    <field name="ibu_warganegara" />
                                    <field name="ibu_telp" />
                                    <field name="ibu_email" />
                                    <field name="ibu_pekerjaan_id" />
                                    <field name="ibu_alamat_kantor" />
                                    <field name="ibu_penghasilan" />
                                    <field name="ibu_pendidikan" />
                                </group>
                                <separator string="Identitas Wali" colspan="4"/>
                                <group col="4" colspan="4">
                                    <field name="wali_nama" />
                                    <field name="wali_tmp_lahir" />
                                    <field name="wali_tgl_lahir" />
                                    <field name="wali_warganegara" />
                                    <field name="wali_telp" />
                                    <field name="wali_email" />
                                    <field name="wali_pekerjaan_id" />
                                    <field name="wali_alamat_kantor" />
                                    <field name="wali_penghasilan" />
                                    <field name="wali_pendidikan" />
                                </group>
                            </page>
                            
                            <page string="Data Keuangan Siswa">
                                <field name="keuangan_siswa_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
